{
  "name": "@ethanke/lum-ui",
  "version": "0.1.0",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts",
    "./theme": "./src/theme.ts",
    "./components": "./src/components.ts",
    "./charts": "./src/charts.ts",
    "./tables": "./src/tables.ts",
    "./icons": "./src/icons.ts",
    "./utils": "./src/utils.ts",
    "./layouts": "./src/layouts.ts",
    "./metrics": "./src/metrics.ts"
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/**/*.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "examples/**",
      "tests/**",
      "docs/**",
      "scripts/**",
      "**/*.test.ts"
    ]
  },
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check mod.ts",
    "test": "deno test --allow-read",
    "publish": "deno publish",
    "gen:showcase": "deno run --allow-read --allow-write scripts/generate-showcase.ts ./showcase",
    "gen:docs": "deno run --allow-read --allow-write scripts/generate-docs.ts ./docs"
  }
}
